<form class="{{item.type}}" autocomplete="off">
  <header class="sheet-header">
    <div class="header-fields">
        <h5><input name="name" id="itemName" type="text" value="{{item.name}}" placeholder="Name"/></h5>
        <div class='label-container'><label for='weaponType'>{{localize "swSaga.weapon.type" }}</label><input id='weaponType' name="data.type" type='text' value="{{data.type}}"/></div>
  </header>
  <section>
    <div class='item-container'>
      <div>
        <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
        <div>
          <div>
            <div class='label-container'><label for='weaponAvail'>{{localize "swSaga.weapon.availability" }}</label><input id='weaponAvail' name="data.availability" type='text' value="{{data.availability}}"/></div>
            <div class='label-container'><label for='weaponWield'>{{localize "swSaga.weapon.weaponWield" }}</label><input id='weaponWield' name="data.weaponWield" type='text' value="{{data.weaponWield}}"/></div>
            <div class='label-container'><label for='weaponGroup'>{{localize "swSaga.weapon.weaponGroup" }}</label><input id='weaponGroup' name="data.weaponGroup" type='text' value="{{data.weaponGroup}}"/></div>
          </div>
          <div>
            <div class='label-container'><label for='weaponDescription'>{{localize "swSaga.item.description" }}</label><textarea id='weaponDescription' name="data.description">{{data.description}}</textarea></div>
          </div>
        </div>
      </div>
      <div>
        <div class='label-container'>
          <label for='skillUsed'>{{localize 'swSaga.weapon.skillUsed' }}</label>
            <select id='skillUsed' name="data.skillUsed">
              {{#select data.skillUsed}}
              {{#each config.skillUsed as |name type|}}
              <option value="{{type}}">{{localize name}}</option>
              {{/each}}
              {{/select}}
            </select>
        </div>
        <div class='label-container'><label for='weaponDamage'>{{localize 'swSaga.weapon.damage' }}</label><input id='weaponDamage' name="data.damage" type='text' value="{{data.damage}}"/></div>
        <div class='label-container'><label for='stunDamage'>{{localize "swSaga.weapon.stunDamage" }}</label><input id='stunDamage' name="data.stunDamage" type='text' value="{{data.stunDamage}}"/></div>
        <div class='label-container'><label for='weaponWeight'>{{localize "swSaga.weapon.weight" }}</label><input id='weaponWeight' name="data.weight" type='text' value="{{data.weight}}"/></div>
        <div class='label-container'><label for='weaponDamageType'>{{localize "swSaga.weapon.damageType" }}</label><input id='weaponDamageType' name="data.damageType" type='text' value="{{data.damageType}}"/></div>
        <div class='label-container'><label for='weaponRange'>{{localize "swSaga.weapon.range" }}</label><input id='weaponRange' name="data.range" type='text' value="{{data.range}}"/></div>      
        <div class='label-container'><label for='weaponCost'>{{localize "swSaga.weapon.cost" }}</label><input id='weaponCost' name="data.cost" type='text' value="{{data.cost}}"/></div>

      </div>
     
    </div>    
  </section>
</form>