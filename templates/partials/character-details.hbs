<header class="sheet-header">
  <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="200" width="200"/>
  <div class='section-container'>
    <div class='first-row'>

      <div class='label-container character-form'>
        <label for='characterName'>Character</label>
        <input name="characterName" id="characterName" type="text" value="{{actor.name}}" placeholder="Name"/>
      </div>

      {{log data}}

      <div class='label-container character-form small-flex'>
        <label for='characterName'>Level</label>
        <input name="characterName" id="characterName" type="text" value="{{data.characterLevel}}" placeholder="Level"/>
      </div>

      <div class='label-container species-form'>
        <label for='speciesName'>Species</label>
        <select id='speciesName' name="data.species">
          {{#select data.species}}
          {{#each config.species as |name type|}}
            <option value="{{type}}">{{localize name}}</option>
          {{/each}}
          {{/select}}
        </select>
      </div>      
    </div>

    <div class='second-row'>
      <div class='label-container player-form'>
        <label for='playerName'>Age</label>
        <input type='text' id='playerName' name='playerName' value="{{data.details.age}}"/>
      </div>   
      <div class='label-container player-form'>
        <label for='playerName'>Gender</label>
        <input type='text' id='playerName' name='playerName' value="{{data.details.gender}}"/>
      </div>   
            <div class='label-container player-form'>
        <label for='playerName'>Height</label>
        <input type='text' id='playerName' name='playerName' value="{{data.details.height}}" data-dtype="Number"/>
      </div>     
      <div class='label-container player-form'>
        <label for='playerName'>Weight</label>
        <input type='text' id='playerName' name='playerName' value="{{data.details.weight}}" data-dtype="Number"/>
      </div>      
    </div>
    </div>
    
  </div>
  
</header>